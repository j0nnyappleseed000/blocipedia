<div class="container">
  <div class="row">
    <h3 class="h3-text-devise">Users</h3>
    <div class="column">
      <table class= "table table-bordered table-hover" data-sort-name="description" data-sort-order="desc">
        <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Account Type</th>
        </tr>
      </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>