<% if (current_user[:role] == "admin") %>
  <td><%= link_to user[:name], user %></td>
  <td><%= link_to user[:email], user_path(user) %></td>
  <td><%= user[:role] %></td>
<% elsif (current_user) %>
  <% @users.each do |user| %>
    <td><%= link_to user[:name], user_path(user) %></td>
  <% end %>
  <td><%= user[:email] %></td>
  <td><%= user[:role] %></td>
  <% else %>
  <td>Please login to see list of users.</td>
<% end %>