<h2 class= "h3-text-devise">Edit</h2>

<div class="col-md-8">
  <%= form_for @wiki do |f| %>
  <% if current_user.role == 'admin' || current_user.role == 'premium' %>
    <%= render partial: 'form', locals: {f: f} %>
    <%= link_to 'New Collaborator', new_wiki_collaborator_path([:wiki_id]) %>
  <% end %>
  <br>
  <br>
   <div class="form-group">
     <%= f.label :name %>
     <%= f.text_field :title, class: 'form-control', placeholder: "New Wiki name" %>
   </div>
   <div class="form-group">
     <%= f.label :description %>
     <%= f.text_area :body, rows: 5, class: 'form-control', placeholder: "New Wiki description" %>
   </div>
   <%= link_to "Back", :back, class: 'btn btn-info' %>
   <%= f.submit "Save", class: 'btn btn-success' %>
   <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
 <% end %>
</div>